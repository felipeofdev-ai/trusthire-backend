# ==================== APPLICATION ====================
APP_NAME=TrustHire Ultimate
APP_VERSION=3.0.0
ENV=production
DEBUG=false
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING

# ==================== AI ====================
# Obtenha em: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# ==================== DATABASE (OPCIONAL) ====================
# Postgres, MySQL, SQLite suportados
# DATABASE_URL=postgresql://user:password@localhost:5432/trusthire
# REDIS_URL=redis://localhost:6379

# ==================== STRIPE ====================
# Dashboard: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Price IDs - Criar produtos no Stripe Dashboard
STRIPE_PRICE_PRO_MONTHLY=price_xxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxx

# ==================== FEATURES ====================
FEATURE_JOB_SCAM_DETECTION=true
FEATURE_RESUME_OPTIMIZATION=true
FEATURE_ATS_COMPATIBILITY=true
FEATURE_MULTI_LANGUAGE=true

# ==================== INTERNATIONALIZATION ====================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,pt-BR,es,fr,de,it,zh,ja

# ==================== CORS ====================
# Adicione os domínios do seu frontend separados por vírgula
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173,https://trusthire.app

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_FREE=10/minute
RATE_LIMIT_PRO=100/minute
RATE_LIMIT_ENTERPRISE=1000/minute

# ==================== TIERS ====================
FREE_TIER_DAILY_LIMIT=10
FREE_TIER_RESUME_LIMIT=3
PRO_TIER_DAILY_LIMIT=100
PRO_TIER_RESUME_LIMIT=50
ENTERPRISE_TIER_DAILY_LIMIT=10000
ENTERPRISE_TIER_RESUME_LIMIT=1000

# ==================== MONITORING (OPCIONAL) ====================
# Sentry para error tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
LOG_LEVEL=INFO

# ==================== EXTERNAL APIS (OPCIONAL) ====================
# VirusTotal para análise de links
# VIRUSTOTAL_API_KEY=xxxxx
# URLScan para análise de URLs
# URLSCAN_API_KEY=xxxxx
